    <main class="container">
        <form class="w-50 m-auto mt-5 mb-5">

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-4">
                    Connecté en tant que {{ app.user.name }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <div class="form-outline mb-4">
                <label class="form-label" for="form2Example1">Email</label>
                <input type="email" id="form2Example1" class="form-control" placeholder="Email" value="{{ last_username }}"/>
            </div>

            <div class="form-outline mb-4 f ">
                <label class="form-label" for="form2Example2">Mot de passe</label>
                <input type="password" id="form2Example2" class="form-control" placeholder="Mot de passe"/>
            </div>

            <div class="row mb-4">
                <a href="#!" class="text-end">Mot de passe oublié</a>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit" class="btn btn-primary btn-block mb-4 w-100">Connexion</button>

            <div class="text-center">
                <p>Pas encore inscrit ? <a href="#!">Inscrivez-vous</a></p>
            </div>
        </form>
    </main>
{% endblock %}
